<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.HawkeyeViewer" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/hawkeye_primary</item>
        <item name="colorPrimaryVariant">@color/hawkeye_primary_dark</item>
        <item name="colorOnPrimary">@color/text_primary</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/hawkeye_accent</item>
        <item name="colorSecondaryVariant">@color/hawkeye_primary_dark</item>
        <item name="colorOnSecondary">@color/text_primary</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/background_dark</item>
        <item name="android:navigationBarColor">@color/background_dark</item>

        <!-- Background colors -->
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnSurface">@color/text_primary</item>

        <!-- Force dark mode -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>
</resources>
